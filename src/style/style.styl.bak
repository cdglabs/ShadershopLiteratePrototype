// ============================================================================
// Config
// ============================================================================

wordPadding = 3px
wordBorderRadius = 5px
lineSpacing = 4px

paramColor = #ffe
lineOutputColor = #eef


// ============================================================================
// Generic
// ============================================================================

html, body
  // overflow hidden
  font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif
  font-size 13px
  // line-height 14px
  color #444
  cursor default
  margin 0

[contenteditable]:active, [contenteditable]:focus, button:active, button:focus
  outline none

canvas
  position absolute
  width 100%
  height 100%






.tree
  white-space nowrap
  display inline-block

  .node
    margin-bottom -1px
    padding-right 6px
    margin-right 2px // 6 with no white space
    width 210px
    // min-width 140px
    &:before
      display inline-block
      vertical-align middle
      content " "
      border 1px solid #eee
      background-color #fff
      width 40px
      height 40px
    &:hover
      background-color #eef


.thumb
  display inline-block
  vertical-align middle
  border 1px solid #eee
  background-color #fff
  margin-left 6px
  width 28px
  height 28px

.variable
  display inline-block
  vertical-align middle
  margin-left 6px
  background-color #fff
  border-radius 4px

.variableLabel, .variableValue
  display inline-block
  padding 2px 4px

.variableLabel
  background-color rgba(0, 0, 0, 0.2)
  border-radius 4px 0px 0px 4px

.variableValue
  background-color rgba(0, 0, 0, 0.1)
  border-radius 0px 4px 4px 0px
  min-width 30px

.fnName
  display inline-block
  vertical-align middle
  margin-left 6px
  min-width 11px

.customFnHeader
  padding-bottom 12px
  margin-bottom 12px
  border-bottom 1px solid #eee
  .fnName
    font-weight bold
    margin-left 0px

#editor
  display inline-block
  margin 24px